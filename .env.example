# Render Environment Variables Template
# Copy this file to .env for local development (DO NOT commit .env file)

# Port Configuration (automatically set by Render)
PORT=5001

# Python Version (specified in runtime.txt)
PYTHON_VERSION=3.9.23

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Application Settings
# FLASK_SECRET_KEY=your-secret-key-here  # Uncomment and set for production if using sessions

# Gunicorn Workers (adjust based on your Railway plan)
WEB_CONCURRENCY=2

# Optional: Database URL (if you add database support later)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Optional: Redis URL (if you add caching later)
# REDIS_URL=redis://user:password@host:port
